<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" type="text/css" href="/stylesheets/mycss.css">
        <title>Meals Weekly</title>
    </head>
    <body>
        <a name="Top"></a>
        <div id="header-panel">
            <div class="navigation">
            <span id=title>Meals Weekly</span>
            <span id="nav-home"><a class="nav" href="home">Home</a></span>
            <span id="nav-form"><a class="nav" href="addmeal">Edit Meals</a></span>
            <span id="nav-list"><a class="nav" href="list">Shopping List</a></span>
            <span id="logged-in-as"></span>
            </div>
        </div>
            
        
        <div class="flex-container">
            <div id="addmeal">
                <form id="formSendMeals" name="sendmeals" method="post" action="/sendmeals">
                    <div id="titlepanel">
                        <select name="week" id="week">
                                <option value="Choose" disabled>Choose Week</option>
                                <%
                                    var list = '';
                                    for (i = 0; i < weeksArray.length; i++) {
                                    list += '<option id="' + weeksArray[i] + '" value= "'+ weeksArray[i] + '"> '+ weeksArray[i] + '</option>';
                                    }
                                %>
                                <%- list %>
                        </select>
                        <select name="day" id="dayselect">
                            <option id="Monday" value="Monday">Monday</option>
                            <option id="Tuesday" value="Tuesday">Tuesday</option>
                            <option id="Wednesday" value="Wednesday">Wednesday</option>
                            <option id="Thursday" value="Thursday">Thursday</option>
                            <option id="Friday" value="Friday">Friday</option>
                            <option id="Saturday" value="Saturday">Saturday</option>
                            <option id="Sunday" value="Sunday">Sunday</option>
                        </select>    
                    </div>
                    <br>
                    <label for="breakfast">Breakfast:</label><br>
                    <input type="text" id="breakfast" name="breakfast"><br>
                    <label for="lunch">Lunch:</label><br>
                    <input type="text" id="lunch" name="lunch"><br><br>
                    <label for="dinner">Dinner:</label><br>
                    <input type="text" id="dinner" name="dinner"><br><br>
                    <input class="submitbutton" type="submit" value="Submit">
                    </form> 
            </div>
        </div>
        <div id="footer-panel">Created by Jonah Kavadlo</div>
    </body>
</html>

<script>
    var msg = "Logged in as " + localStorage.getItem("username");
    document.getElementById("logged-in-as").innerHTML = msg; 

    document.getElementById(<%- JSON.stringify(globalWeek) %>).setAttribute("selected", "");
    document.getElementById(localStorage.getItem("currentDay")).setAttribute("selected", "");
</script>